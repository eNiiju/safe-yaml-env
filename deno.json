{
  "tasks": {
    "test": "deno test ./test/**/*.ts --allow-env --allow-write --allow-read",
    "test-coverage": "deno test ./test/**/*.ts --allow-env --allow-write --allow-read --coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "publish-jsr-dry": "deno publish --config jsr.json --dry-run --allow-dirty",
    "publish-jsr": "deno publish --config jsr.json",
    "dnt": "deno run -A scripts/npm.ts",
    "publish-npm": "deno run dnt && cd dist_npm/ && npm publish"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "zod": "npm:zod@^3.23.8"
  }
}
